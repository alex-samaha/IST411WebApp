<!doctype HTML>

<HTML>
    <head>
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

        <!-- Optional theme -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

        <!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    </head>
    <header>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
              
              <ul class="nav navbar-nav">
                <li class="active"><a href="/home">Home</a></li>
              </ul>
            </div>
          </nav>
    </header>
    <body >
        <h1 style="padding-left: 10%">
            Edit Survey
        </h1>
        <br>
        <form style="padding-left: 10%"class="form-inline" action="/survey/<%= survey.title %>/edit?_method=put" method="post">
            <div class="col-sm-12">
                <div class="col-sm-3">
                    <label for="surveyTitle">Enter Survey Title:</label>
                </div>
                <div class="col-sm-9">
                    <input type="text" class="form-control" name="surveyTitle" value="<%= survey.title %>"> <br> <br>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="col-sm-3">
                    <label for="researcherName">Enter Name of Researcher:</label>
                </div>
                <div class="col-sm-9">
                    <input type="text" class="form-control" name="researcherName" value="<%= survey.researcherName %>"> <br> <br>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="col-sm-3">
                    <label for="institution">Enter Institution:</label>
                </div>
                <div class="col-sm-9">
                    <input type="text" class="form-control" name="institution" value="<%= survey.institution %>"> <br> <br>
                </div>
            </div>
            <div class="col-sm-12"> 
                <div class="col-sm-3">
                    <label for="surveySummary">Enter Survey Summary:</label>
                </div> 
                <div class="col-sm-9">
                    <textarea style="width: 197px;" type="textarea" class="form-control" name="surveySummary"><%= survey.summary %></textarea><br> <br>
                </div> 
            </div>
            <div class="col-sm-12">
                <div class="col-sm-3">
                    <label for="deadline"> Enter Survey Deadline:</label>
                </div> 
                <div class="col-sm-9">
                    <input type="date" style="width: 197px;"class="form-control" name="deadline" value="<%= date %>" required> <br> <br>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="col-sm-3">
                    <label for="rewards">Enter Survey Rewards:</label>
                </div>
                <div class="col-sm-9">
                    <input type="text" class="form-control" name="rewards" value="<%= survey.rewards %>"> <br> <br>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="col-sm-3">
                    <label for="surveyLink">Enter Link to Survey:</label>
                </div>
                <div class="col-sm-9">
                    <input type="url" class="form-control" name="surveyLink" value="<%= survey.surveyLink %>"> <br> <br>
                </div>
            </div>              
                   
            <footer class="col-sm-12">
                <div class="col-sm-3" > </div>
                <div class="col-sm-9" >
                    <button type="submit" class="btn btn-primary">Update Survey</button>
                    <a href="/my-surveys" class="btn btn-danger">Back</a>
                </div>
                
            </footer>
            
          </form>
       
        
    </body>
   
</HTML>
